<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PlayerActivity">
    <com.google.android.exoplayer2.ui.PlayerView
        android:layout_width="match_parent"
        android:id="@+id/exoplayer"
        android:layout_height="match_parent"
        app:controller_layout_id="@layout/custom_control"
        android:keepScreenOn="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/topcontroler"
        android:background="#42000000"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:backgroundTint="@android:color/transparent"
            android:tint="@color/white"
            android:id="@+id/backbtn"
            tools:ignore="UseAppTint"
            android:contentDescription="@string/backbtn" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/video_name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:id="@+id/videotitle"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/menu"
            android:layout_marginEnd="50dp"
            android:id="@+id/menu"
            android:backgroundTint="@android:color/transparent"
            android:tint="@color/white"
            tools:ignore="UseAppTint"
            android:padding="10dp"
            android:contentDescription="@string/backbtn" />
    </LinearLayout>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/lock"
        android:id="@+id/lockbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/topcontroler"
        android:backgroundTint="@android:color/transparent"
        android:tint="@color/white"
        tools:ignore="UseAppTint"
        android:contentDescription="@string/backbtn" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">
        <FrameLayout
            android:id="@+id/rewindfl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/rewindbtn"
                android:clickable="false"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/rewind"
                android:background="@android:color/transparent"
                android:tint="@color/white"
                tools:ignore="UseAppTint"
                android:contentDescription="@string/backbtn" />
        </FrameLayout>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/playpause"
            android:src="@drawable/playicon"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackground"
            android:tint="@color/white"
            tools:ignore="UseAppTint"
            android:contentDescription="@string/backbtn" />
        <FrameLayout
            android:id="@+id/forwdfl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/forwardbtn"
                    android:src="@drawable/forward"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    android:contentDescription="@string/backbtn"
                    tools:ignore="UseAppTint" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/bottomcontroler"
        android:background="#42000000"
        android:gravity="end|bottom"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/exo_controls_repeat_off"
            android:backgroundTint="@android:color/transparent"
            android:tint="@color/white"
            android:id="@+id/repeatbtn"
            tools:ignore="PrivateResource,UseAppTint"
            android:contentDescription="@string/backbtn" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pervious"
            android:backgroundTint="@android:color/transparent"
            android:tint="@color/white"
            tools:ignore="UseAppTint"
            android:id="@+id/prev"
            android:padding="10dp"
            android:contentDescription="@string/backbtn" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/next"
            android:src="@drawable/nexticon"
            android:backgroundTint="@android:color/transparent"
            android:tint="@color/white"
            tools:ignore="UseAppTint"
            android:padding="10dp"
            android:contentDescription="@string/backbtn" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/fullscreenbtn"
            android:src="@drawable/fullscreen_icon"
            android:backgroundTint="@android:color/transparent"
            android:tint="@color/white"
            tools:ignore="PrivateResource,UseAppTint"
            android:padding="10dp"
            android:contentDescription="@string/backbtn" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>